{
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react"
    ],
    "env": {
        "jest": true
    },
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ]
    }
}
