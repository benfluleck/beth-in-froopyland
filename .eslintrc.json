{
    "extends": [
        "standard",
        "plugin:react/recommended",
        "better-styled-components"
    ],
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "better-styled-components/sort-declarations-alphabetically": 2
    }
}
